{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,

		"module": "es2015",
		"moduleResolution": "node",
		"target": "es2015",

		"sourceMap": true,
		"outDir": "out",

		"declaration": true,
		"declarationDir": "declarations",

		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false
	},
	"include": [
		"src/**/*",
		"custom_typings/**/*"
	]
}
