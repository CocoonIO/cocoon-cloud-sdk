{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es6",

		"preserveConstEnums": true,
		"removeComments": false,

		"sourceMap": true,
		"outDir": "out",

		"declaration": true,
		"declarationDir": "declarations",

		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"src/**/*",
		"custom_typings/**/*"
	]
}
